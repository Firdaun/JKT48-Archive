generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Member {
  id         Int     @id @default(autoincrement())
  name       String
  nickname   String?
  generation Int
  isActive   Boolean @default(true)

  accounts SocialAccount[]
  photos   Photo[]
}

model SocialAccount {
  id       Int    @id @default(autoincrement())
  platform String
  username String
  url      String

  memberId Int
  member   Member @relation(fields: [memberId], references: [id])
}

model Photo {
  id        Int     @id @default(autoincrement())
  srcUrl    String
  fileId    String?
  caption   String? @db.Text
  postUrl   String
  mediaType String

  postedAt DateTime
  savedAt  DateTime @default(now())

  memberId Int
  member   Member @relation(fields: [memberId], references: [id])
}
